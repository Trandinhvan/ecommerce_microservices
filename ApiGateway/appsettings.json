{
  "ReverseProxy": {
    "Routes": {
      "identity": {
        "ClusterId": "identityCluster",
        "Match": { "Path": "/api/auth/{**catch-all}" }
      },
      "catalog-products": {
        "ClusterId": "catalogCluster",
        "Match": { "Path": "/api/product/{**catch-all}" }
      },
      "catalog-categories": {
        "ClusterId": "catalogCluster",
        "Match": { "Path": "/api/category/{**catch-all}" }
      },
      "basket": {
        "ClusterId": "basketCluster",
        "Match": { "Path": "/api/basket/{**catch-all}" }
      },
      "ordering": {
        "ClusterId": "orderingCluster",
        "Match": { "Path": "/api/orders/{**catch-all}"}
      }
    },
    "Clusters": {
      "identityCluster": { "Destinations": { "identity1": { "Address": "http://localhost:5297/" } } },
      "catalogCluster": { "Destinations": { "catalog1": { "Address": "http://localhost:5249/" } } },
      "basketCluster": { "Destinations": { "basket1": { "Address": "http://localhost:5015/" } } },
      "orderingCluster": { "Destinations": { "ordering1": { "Address": "http://localhost:5266/" } } }
    }
  }
}